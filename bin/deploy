#!/bin/bash

# Build a tarball for the compute server
source $HEXCALC/ops/config.sh

if [ -z $DEPLOY_TARGET_PATH ]; then
    echo "Exited, the env var, DEPLOY_TARGET_PATH, must be defined"
    exit 1
fi
rm $HEXCALC/ops/logsPrev/*
cd $HEXCALC
tar -czf ops/install.tgz \
    bin \
    build \
    calc \
    ops/configExamples \
    standalone \
    tests \
    www

scp $HEXCALC/ops/install.tgz $DEPLOY_TARGET_PATH
